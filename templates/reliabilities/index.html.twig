{% extends 'base.html.twig' %}

{% block title %}Reliabilities index{% endblock %}

{% block body %}
    <h1>Reliabilities index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reliability in reliabilities %}
            <tr>
                <td>{{ reliability.id }}</td>
                <td>{{ reliability.value }}</td>
                <td>{{ reliability.date ? reliability.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('reliabilities_show', {'id': reliability.id}) }}">show</a>
                    <a href="{{ path('reliabilities_edit', {'id': reliability.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reliabilities_new') }}">Create new</a>
{% endblock %}
